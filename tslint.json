{
    "rulesDirectory": [
        "node_modules/codelyzer"
    ],
    "rules": {
        "array-type": [
            false
        ],
        "arrow-parens": false,
        "class-name": true,
        "curly": true,
        "eofline": false,
        "indent": [
            true,
            "spaces",
            4
        ],
        "label-position": true,
        "max-line-length": [
            false,
            140
        ],
        "member-ordering": [
            true,
            {
                "order": [
                    "public-instance-field",
                    "private-instance-field",
                    "public-constructor",
                    "public-instance-method",
                    "protected-instance-method",
                    "private-instance-method"
                ]
            }
        ],
        "no-arg": true,
        "no-debugger": true,
        "no-empty": true,
        "no-eval": true,
        "no-non-null-assertion": false,
        "no-string-literal": false,
        "no-trailing-whitespace": true,
        "no-unsafe-finally": true,
        "no-use-before-declare": false,
        "no-var-keyword": true,
        "no-var-requires": false,
        "one-line": [
            true,
            "check-open-brace",
            "check-else",
            "check-whitespace"
        ],
        "only-arrow-functions": [
            true,
            "allow-declarations",
            "allow-named-functions"
        ],
        "prefer-for-of": true,
        "quotemark": [
            true,
            "single"
        ],
        "radix": true,
        "semicolon": [
            true,
            "always",
            "ignore-interfaces"
        ],
        "switch-default": true,
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "unified-signatures": true,
        "variable-name": false,
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ]
    }
}